{
  "name": "seri",
  "version": "0.0.8",
  "description": "JavaScript (Node.js) serializer / deserializer with support for classes.",
  "main": "src/index.js",
  "directories": {
    "test": "test"
  },
  "files": [
    "src/*.js"
  ],
  "scripts": {
    "clear": "rm -rf ./lib ./coverage ./.nyc_output",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "nyc": "nyc npm test && nyc report --reporter=lcov",
    "test": "mocha",
    "test-watch": "mocha --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joonhocho/seri.git"
  },
  "keywords": [
    "javascript",
    "node.js",
    "serializer",
    "deserializer",
    "class",
    "support",
    "toJSON",
    "json",
    "stringify"
  ],
  "author": "Joon Ho Cho",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joonhocho/seri/issues"
  },
  "homepage": "https://github.com/joonhocho/seri#readme",
  "dependencies": {},
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "coveralls": "^2.11.9",
    "mocha": "^2.5.3",
    "nyc": "^6.6.1"
  }
}
